<% if ((locals.folders && folders.length > 0) || (locals.files && files.length > 0)) { %>
  <ul class="list-no-style directory-list">
    <% if (locals.folders && folders.length > 0) { %>
      <% for (const folder of folders) { %>
        <%- include('directory-list-folder.ejs', { folder }) %>
      <% }; %>
    <% }; %>
    <% if (locals.files && files.length > 0) { %>
      <% for (const file of files) { %>
        <li>
          <a href="/file/<%= file.id %>">
            <%= file.name %>
          </a>
          <%- include('../file/delete-file-form.ejs', { file }) %>
        </li>
      <% }; %>
    <% }; %>
  </ul>
<% } else { %>
  <p>This folder is empty.</p>
<% }; %>