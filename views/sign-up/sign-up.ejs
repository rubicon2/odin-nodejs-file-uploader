<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <main class="container">
      <h1>Sign Up</h1>
      <form action="/sign-up" method="post" class="std-form">
        <label class="form-row">
          Email:
          <div>
            <input type="email" name="email" required value="<%= locals.formData?.email ? formData.email : '' %>" class="invalid-input" />
            <div class="form-error" id="form-error--email">
              <%= locals.errors?.email ? errors.email : '' %>
            </div>
          </div>
        </label>
        <label class="form-row">
          Password:
          <div>
            <input type="password" name="password" required value="<%= locals.formData?.password ? formData.password : '' %>" class="invalid-input"/>
            <div class="form-error" id="form-error--password">
              <%= locals.errors?.password ? errors.password : '' %>
            </div>
          </div>
        </label>
        <label class="form-row">
          Confirm password:
          <div>
            <input type="password" name="confirm_password" value="<%= locals.formData?.confirm_password ? formData.confirm_password : '' %>"/>
            <div class="form-error" id="form-error--confirm-password">
              <%= locals.errors?.confirm_password ? errors.confirm_password : '' %>
            </div>
          </div>
        </label>
        <button type="submit">Sign Up</button>
      </form>
    </main>
  </body>
</html>