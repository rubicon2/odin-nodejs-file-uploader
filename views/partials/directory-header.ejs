<header>
  <div class="flex-h flex-between">
    <div>
      <h1 class="header__title"><%= title %></h1>
        <% if (locals.folder) { %>
        <% if (folder.parentId) { %>
          <a href="<%= `/folder/${folder.parentId}` %>">Back to <%= folder.parent.name %></a>
          <% } else { %>
            <a href="/">Back to root directory</a>
          <% }; %>
        <% } else { %>
          <a href="/" class="visibility-none">Here to keep the spacing consistent!</a>
        <% }; %>
    </div>
    <div class="folder__buttons flex-h">
      <%- include('../file/upload-file-form.ejs', { folderId: (locals.folder) ? folder.id : null }) %>
      <form action="<%= (locals.folder) ? `/folder/${folder.id}/new` : '/folder/new' %>" method="post">
        <button type="submit" class="button-no-style std-button block">
          <img src="/public/icons/create_new_folder.svg" alt="create new folder">
        </button>
      </form>
    </div>
  </div>
</header>